        resetStyles(btnLevwell);
        btnLevwell.classList.add(...activeClasses);
        resetStyles(btnPharmastaff);
        btnPharmastaff.classList.add(...inactiveClasses);
      } else {
        contentLevwell.classList.add("hidden");
