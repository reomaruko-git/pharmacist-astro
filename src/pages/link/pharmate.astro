/* ファル・メイトURL転送 */
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Loading...</title>

    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-T5MFTFR3");
    </script>

    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>

  <body
    class="bg-teal-50/50 font-sans flex flex-col justify-center items-center h-screen w-screen overflow-hidden"
  >
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-T5MFTFR3"
        height="0"
        width="0"
        style="display: none; visibility: hidden"
      ></iframe
    ></noscript>

    <div class="text-center">
      <div class="flex items-center justify-center mb-6 text-teal-600">
        <span class="text-2xl sm:text-3xl font-light tracking-[0.2em]">L</span>
        <i
          class="fas fa-capsules text-2xl sm:text-3xl animate-spin mx-2 sm:mx-3"
        ></i>
        <span class="text-2xl sm:text-3xl font-light tracking-[0.2em]"
          >ADING</span
        >
      </div>

      <p class="text-[10px] text-gray-400 leading-relaxed">
        自動で移動しない場合は
        <a
          id="manual-link"
          href="https://px.a8.net/svt/ejp?a8mat=45KFSQ+7O95GY+31X8+5YJRM"
          class="underline hover:text-teal-600 transition font-bold"
        >
          こちら
        </a>
        をクリック
      </p>
    </div>

    <script is:inline>
      // 0.8秒待ってから実行（GTMの計測完了を待つ）
      setTimeout(function () {
        const params = new URLSearchParams(window.location.search);
        const baseDest =
          "https://px.a8.net/svt/ejp?a8mat=45KFSQ+7O95GY+31X8+5YJRM";

        // パラメータがある場合、& でつなぐ（? の重複を防ぐ）
        const finalUrl = params.toString()
          ? baseDest + "&" + params.toString()
          : baseDest;

        // 手動リンクのURLも更新
        const linkElem = document.getElementById("manual-link");
        if (linkElem) linkElem.href = finalUrl;

        // 転送実行
        window.location.href = finalUrl;
      }, 800);
    </script>
  </body>
</html>
